---
import Navigation from '../components/Navigation.astro';
import '../styles/scss/app.scss';

interface Props {
  title?: string;
}

const { title = 'YDS Proposal' } = Astro.props;
const currentPath = Astro.url.pathname;
---

<!doctype html>
<html class="no-js" lang="en">
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title}</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/glightbox/dist/css/glightbox.min.css" />
  </head>
  <body>
    <Navigation currentPath={currentPath} />

    <main>
      <slot />
    </main>

    <script is:inline src="/assets/js/app-bundled.js"></script>
    <script is:inline src="https://cdn.jsdelivr.net/gh/mcstudios/glightbox/dist/js/glightbox.min.js"></script>

    <script is:inline>
      // Initialize GLightbox after page loads
      document.addEventListener('DOMContentLoaded', function() {
        if (typeof GLightbox !== 'undefined') {
          const lightbox = GLightbox({
            moreLength: 0
          });
        }
      });
    </script>
  </body>
</html>
